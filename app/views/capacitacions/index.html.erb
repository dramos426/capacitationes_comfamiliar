<fieldset>
  <legend>
    Listado de Capacitaciones
  </legend>
</fieldset>
<table class="table table-hover">
  <tr>
    <th>Tema</th>
    <th>Valor</th>
    <th>Fecha</th>
    <th>Institución</th>
    <th>Capacitador</th>
    <th>Acciones</th>
  </tr>

	<% @capacitaciones.each do |capacitacion| %>
	<tr>
  	<td><%= capacitacion.tema %></td>
    <td><%= capacitacion.valor %></td>
  	<td><%= capacitacion.fecha.strftime("%m/%d/%Y") %></td>
    <td><%= capacitacion.institucion %></td>
    <td><%= capacitacion.capacitador%></td>
  	<td><%= link_to 'Detalles', capacitacion%> - <%= link_to 'Editar', edit_capacitacion_path(capacitacion) %> - <%= link_to 'Eliminar', capacitacion , method: :delete, data: { confirm: '¿Estás seguro de eliminar esta capacitación?' } %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'Nueva Capacitacion', new_capacitacion_path, class: "btn btn-primary" %>
