<h2>Crea una cuenta Capacitador</h2>
  <div class="well">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nombres, :required => true, :autofocus => true, label: "Nombres"%>
        <%= f.input :apellidos, :required => true, label: "Apellidos"%>
        <%= f.input :tipo_identificacion, :required => true, label: "Tipo de identificación", collection: Capacitador::TIPOS_IDENTIFICACION.values %>
        <%= f.input :identificacion, :required => true, label: "Indentificación" %>
        <%= f.input :email, :required => true, label: "Correo Electrónico" %>
        <%= f.input :password, :required => true, label: "Contraseña" %>
        <%= f.input :password_confirmation, :required => true, label: "Confirme Contraseña" %>
      </div>

      <%= f.button :submit, "Crear Cuenta", class: "btn-primary btn-large" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

